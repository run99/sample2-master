<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateActivity">

    <ImageView
            android:layout_width="84dp"
            android:layout_height="81dp" app:srcCompat="@drawable/github"
            android:id="@+id/trashButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.108"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/NameText"/>
    <ImageView
            android:layout_width="82dp"
            android:layout_height="81dp" app:srcCompat="@drawable/twitter"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginTop="188dp"
            app:layout_constraintTop_toBottomOf="@+id/NameText"/>


    <EditText
            android:layout_width="238dp"
            android:layout_height="73dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/NameText" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Name"/>
    <EditText
            android:layout_width="207dp"
            android:layout_height="84dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/GitHubText"
            app:layout_constraintStart_toEndOf="@+id/trashButton" android:layout_marginStart="28dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/NameText" android:hint="Your ID"/>
    <EditText
            android:layout_width="207dp"
            android:layout_height="84dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/TwitterText"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/GitHubText" app:layout_constraintHorizontal_bias="0.666"
            android:hint="Your ID"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="57dp"
            android:clickable="true" app:srcCompat="@drawable/ic_save_black_24dp"
            android:id="@+id/SaveButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.959" android:background="#ff1493"/>
    <Button
            android:text="your URL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/URLbutton" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.521"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_home_black_24dp"
            android:id="@+id/HomeButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.065"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>